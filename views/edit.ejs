<% include partials/header %>

<div id="post" class="ui equal width grid">
  <div class="column">
    <div class="ui segment">
        <h2 class="ui header">Edit Post - "<%= blog.title %>"</h2>
        <form class="ui form" action="#" method="POST">
          <div class="field">
            <label>Subject</label>
            <input type="text" name="title" placeholder="Post Title" value="<%= blog.title %>">
          </div>
          <div class="field">
            <label>Image Url</label>
            <input type="text" name="image" placeholder="Image Url" value="<%= blog.image %>">
          </div>
          <div class="field">
            <label>Post</label>
            <textarea name="body" placeholder="Your Post Body goes here..."><%= blog.body %></textarea>
          </div>
          <div>
            <input class="ui violet big basic button" type="submit" value="Save" formaction="/blogs/<%= blog._id%>?_method=PUT">
            <input class="ui red big button" type="submit" value="Delete" formaction="/blogs/<%= blog._id %>?_method=DELETE">
          </div>
        </form>
    </div>
  </div>
</div>

<% include partials/footer %>